{{#if addNewReview}}
<h3>Add Review</h3>

<div>
  <div class="row">
    <div class="col-md-4">
      <form>
        <div class="form-group">
          <label for="name" placeholder="Mr. Bones">Your Name</label>
          {{input value=name id="name"  class="form-control input-lg"}}
        </div>

        <div class="form-group">
          <label for="comment" placeholder="They're giving out king-size candy bars!">Review</label>
          {{input value=comment id="comment"  class="form-control input-lg"}}
        </div>

        <button {{action 'saveNewReview' }} class="btn btn-default" id="btn-circle">Save</button>
      </form>
    </div>
  </div>
</div>
{{else}}
<button {{action 'reviewFormShow'}} class="btn btn-default" id="btn-circle">+review</button>
{{/if}}

{{yield}}
