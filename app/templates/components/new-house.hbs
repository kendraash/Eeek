{{yield}}
{{yield}}
{{#if addNewHouse}}
<h3>New House</h3>

<div>
      <div class="row">
        <div class="col-md-4">
          <form>
            <div class="form-group">
              <label for="description">Describe the House</label>
              {{input value=description id="description"  class="form-control input-lg" placeholder="Scary Red House on the Corner"}}
            </div>

            <div class="form-group">
              <label for="address">Address</label>
              {{input value=address id="address"  class="form-control input-lg" placeholder="666 Elm St."}}
            </div>

            <div class="form-group">
              <label for="image">Image URL</label>
              {{input value=image id="image"  class="form-control input-lg" placeholder="\_[-]_/"}}
            </div>

            <div class="form-group">
              <label for="rating">Rating</label>
              {{input value=rating id="rating"  class="form-control input-lg"  placeholder="1 (boo! in a bad way) - 10 (ahh! in an awesome way)"}}
            </div>

          <button {{action 'saveNewHouse'}} class="btn btn-default" id="btn-circle">Save</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <button {{action 'houseFormShow'}} class="btn btn-default" id="btn-circle">+<span class="glyphicon glyphicon-home"></span></button>
{{/if}}
