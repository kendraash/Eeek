{{yield}}
{{yield}}
{{#if addNewActivity}}
  <h1>New Activity</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name"}}
        </div>
        <div class="form-group">
          <label for="city">City</label>
          {{input value=city id="city"}}
        </div>
        <div class="form-group">
          <label for="zipCode">Zip Code</label>
          {{input value=zipCode id="zipCode"}}
        </div>
        <div class="form-group">
          <label for="image">Image Link</label>
          {{input value=image id="image"}}
        </div>
        <div>
          <label for="kid">Kid Friendly?</label>
          {{#x-select value=kid}}
              {{#x-option}} Select One {{/x-option}}
              {{#x-option value=true}} Yes {{/x-option}}
              {{#x-option value=false}} No {{/x-option}}
          {{/x-select}}
        </div>

        <label for="category">Category</label>
        {{#x-select value=category}}
          {{#x-option}} Select One {{/x-option}}
          {{#each categories as |category|}}
            {{#x-option value=category}} {{category.name}} {{/x-option}}
          {{/each}}
        {{/x-select}}
        <button class="btn btn-default"{{action 'save'}}>Save</button>
      </form>
    </div>

{{else}}
<center>
  <button class="btn btn-default" id="btn-circle" {{action 'activityFormShow'}}>+ A</button>
</center>
{{/if}}
